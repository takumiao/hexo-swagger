<% Object.keys(paths).forEach(function(httpMethod, index) { %>
  <% var api = paths[httpMethod] %>
  <nop>
    # [<%- _.upperFirst(httpMethod) %>] <%= path.join('/') %> 
    <%_ if (api.summary) { _%>
      <%_ %> <small style="font-weight:normal;"> - <%= api.summary %></small> 
    <%_ } _%>
  </nop>
  <%/* Description */%>
  <% if (api.description) { %> <%= api.description %> <% } %>

  <%/* Parameters */%>
  <% if (api.parameters) { -%>
    <br/>

    ## Parameters

    <% api.parameters.forEach(function(param) { %>
      <%- include('schema', { 
        typeDef: '###',
        name: param.name, 
        schema: Object.assign(param.schema, {
          description: param.description
        })
      }); %>
    <% }) %>
  <% } %>

  <%/* Body */%>
  <% if (api.requestBody) { %>
    <% var req = api.requestBody %>
    <br/>

    <%- include('requestBody', { req: req }) %>
  <% } %>

  <%/* Responses */%>
  <% if (api.responses) { %>
    <br/>

    ## Response

    <% Object.keys(api.responses).forEach(function(statusCode) { %>
      <% var res = api.responses[statusCode] %>

      <%/* Status Code */%>
      <nop>
      ### <%= statusCode _%>
      <%_ if (res.description) { _%> 
        <%_ %> <small style="font-weight:normal;"> - <%= res.description %></small> 
      <%_ } _%>
      </nop>

      <% if (res.content) { %>
        <% Object.keys(res.content).forEach(function(contentType) { %>

          <%/* content-type as schema title */%>
          <%- include('schema', {
            typeDef: '####',
            name: contentType, 
            schema: res.content[contentType].schema,
            indent: false
          }); %>
        <% }) %>
      <% } %>
    <% }) %>
  <% } %>

  ---
<% }) %>