<% if (req.$ref) { %>
  <%- include('requestBody', { req: ref(req), srcStack: srcStack }); %>
<% } else { %>

  ## RequestBody
  <% if (req.description) { %>
    <%= req.description %>
  <% } %>

  <% if (req.content) { %>
    <% Object.keys(req.content).forEach(function(contentType) { %>
      <%/* content-type as schema title */%>
      <%- include('schema', {
        typeDef: '####',
        name: contentType, 
        schema: req.content[contentType].schema,
        srcStack: srcStack,
        showExample: false
      }); %>
    <% }) %>
  <% } %>
<% } %>