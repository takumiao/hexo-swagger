<% if (req.$ref) { %>
  <%- include('requestBody', { req: ref(req.$ref) }); %>
<% } else { %>
  <nop>
  ## RequestBody
  <%_ if (req.description) { _%>
    <%_ %> <small style="font-weight:normal;"> - <%= req.description %></small> 
  <%_ } _%>
  </nop>

  <% if (req.content) { %>
    <% Object.keys(req.content).forEach(function(contentType) { %>
      <%/* content-type as schema title */%>
      <%- include('schema', {
        typeDef: '####',
        name: contentType, 
        schema: req.content[contentType].schema,
        indent: false
      }); %>
    <% }) %>
  <% } %>
<% } %>